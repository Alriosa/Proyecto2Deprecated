@using WebUI.Models.Helpers;

<script src="~/Scripts/Views/CrudShippingMethod.js"></script>

@{
    ViewBag.Title = "ShippingMethod";
}

@{
    Html.RenderPartial("_MenuStore");
}


<label id="whoAmI" class="d-none">create</label>

<!-- Breadcrumb Area -->
<div class="breadcrumb-area bg-grey">
    <div class="container">
        <div class="ho-breadcrumb">
            <ul>
                <li>@Html.ActionLink("Inicio", "index")</li>
                <li>Registrar nuevo metodo de envio
                    </li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="wrapper" class="container wrapper">
        <div class="row">
            <div class="col-12 my-account-area ptb-30">

                <h2>Crear metodos de envio</h2>
                <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                    <div class="myaccount-details">
                        <form action="#" class="ho-form">
                            <div class="ho-form-inner" id="frmShippingMethod">

                                @*Name*@
                                @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtName", type: "type=\"text\"", format: "", label: "Nombre", placeHolder: "", columnDataName: "Name")

                                @*ShippingProviderId*@
                                @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtShippingProviderId", type: "type=\"number\"", format: "", label: "Id del Proveedor", placeHolder: "", columnDataName: "ShippingProviderId")

                                @*BaseCost*@
                                @Html.CtrlInput(divSize: "single-input", id: "txtBaseCost", type: "type=\"number\"", format: "", label: "Costo Base", placeHolder: "", columnDataName: "BaseCost")

                                @*AdditionalCost*@
                                @Html.CtrlInput(divSize: "single-input", id: "txtAdditionalCost", type: "type=\"number\"", format: "", label: "Costo kilometro adicional", placeHolder: "", columnDataName: "AdditionalCost")

                                @*Description*@
                                @Html.CtrlInput(divSize: "single-input", id: "txtDescription", type: "type=\"text\"", format: "", label: "Descripcion", placeHolder: "", columnDataName: "Description")

                                @*DaysToDeliver*@
                                @Html.CtrlInput(divSize: "single-input", id: "txtDaysToDeliver", type: "type=\"number\"", format: "", label: "Dias para envio", placeHolder: "", columnDataName: "DaysToDeliver")

                                <div class="col-12">
                                    <div class="d-flex align-self-center">
                                        <div class="">
                                            @Html.CtrlButton(viewName: "Crud", id: "btnCancel", style: "ho-button ho-button-dark", label: "Cancelar", onClickFunction: "Back")
                                        </div>
                                        <div class="">
                                            @* Button *@
                                            @Html.CtrlButton(viewName: "Crud", id: "btnCreate", style: "ho-button align-self-center", label: "Registrar proveedor", onClickFunction: "Validate")
                                        </div>
                                        <div id="alertMessage" class="alertMessage d-none">
                                            <p class="">Por favor verificá los campos en rojo.</p>
                                        </div>
                                    </div>
                                </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

