@using WebUI.Models.Helpers
<script src="~/Scripts/Views/CrudCustomer.js"></script>
<script src="~/Scripts/Views/cloudinaryCustomer.js"></script>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Area -->
<div class="breadcrumb-area bg-grey">
    <div class="container">
        <div class="ho-breadcrumb">
            <ul>
                <li>@Html.ActionLink("Inicio", "index")</li>
                <li>Listar cliente</li>
            </ul>
        </div>
    </div>
</div>
<!--// Breadcrumb Area -->

<div id="wrapper" class="container wrapper">
    <div class="row">
        <div class="col-12 my-account-area ptb-30">
            <h2>Clientes registrados</h2>
            <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                @Html.CtrlTable(viewName: "Crud", id: "tblCustomer", title: "Clientes",
                    columnsTitle: "ID del usuario,Identificacion,Nombre,Correo electronico,Status,Moneda", ColumnsDataName: "UserId,Id,Name,Email,UserStatusCode,CurrencyCode", onSelectFunction: "BindFields")
            </div>
        </div>
    </div>
</div>


<!-- Update modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="Update" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modificar tienda</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 my-account-area ptb-30">
                    <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                        <div class="">
                            <form action="#" class="ho-form" id="">
                                <div id="frmCustomer" class="ho-form-inner">

                                    @*Recuadro de Foto del cliente*@
                                    <div id="divImgProduct1" class="col-md-2 col-sm-12 uploadedImage">
                                        <img id="imgCustomerPlaceHolder" src="" alt="Imagen producto 1">
                                    </div>

                                    @*Boton de subir foto del cliente*@
                                    <div class="col-md-10 col-sm-12">
                                        <button id="btnCloudinary" type="button" class="mt-3 ho-button ho-button-dark" onclick="showUploadWidget(false)">
                                            <span>
                                                Subir foto del cliente
                                            </span>
                                        </button>
                                    </div>

                                    @*Recuadro de Foto del ID*@
                                    <div id="divImgProduct1" class="col-md-2 col-sm-12 uploadedImage">
                                        <img id="imgId" src="" alt="Imagen producto 1">
                                    </div>

                                    @*Boton de Foto del ID*@
                                    <div class="col-md-10 col-sm-12">
                                        <button id="btnCloudinary" type="button" class="mt-3 ho-button ho-button-dark" onclick="showUploadWidget(false)">
                                            <span>
                                                Subir ID
                                            </span>
                                        </button>
                                    </div>

                            
                                        <div class="d-flex flex-row">
                                            <div>
                                                @Html.CtrlButton(viewName: "Crud", id: "btnCancel\" data-dismiss=\"modal\"", style: "ho-button-dark", label: "Cancelar", onClickFunction: "")
                                            </div>
                                            <div>
                                                @Html.CtrlButton(viewName: "Crud", id: "btnDelete", style: "ho-button", label: "Eliminar", onClickFunction: "Delete")
                                            </div>
                                            <div>
                                                @Html.CtrlButton(viewName: "Crud", id: "btnSuspend", style: "ho-button", label: "Suspender", onClickFunction: "Suspend")
                                            </div>
                                            <div>
                                                @Html.CtrlButton(viewName: "Crud", id: "btnUpdate", style: "ho-button ", label: "Modificar tienda", onClickFunction: "Update")
                                            </div>
                                        </div>
                                    </div>
                       
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>