@using WebUI.Models.Helpers

<script src="~/Scripts/Views/CrudShippingMethod.js"></script>
@{
    ViewBag.Title = "ShippingMethodList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("_MenuStore");
}


<label id="whoAmI" class="d-none">update</label>

<!-- Breadcrumb Area -->
<div class="breadcrumb-area bg-grey">
    <div class="container">
        <div class="ho-breadcrumb">
            <ul>
                <li>@Html.ActionLink("Inicio", "index")</li>
                <li>Modificar metodos de envio</li>
            </ul>
        </div>
    </div>
</div>
<!--// Breadcrumb Area -->

<div id="wrapper" class="container wrapper">
    <div class="row">
        <div class="col-12 my-account-area ptb-30">
            <h2>Metodos de envio registrados</h2>
            <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                @Html.CtrlTable(viewName: "Crud", id: "tblShippingMethod", title: "Metodos de Envio",
                    columnsTitle: "ID,Nombre,ID del proveedor,Costo Base, Costo adicional, Descripción, Dias de envio ", ColumnsDataName: "ShippingMethodId,Name,ShippingProviderId,BaseCost,AdditionalCost,Description,DaysToDeliver", onSelectFunction: "BindFields")
            </div>
        </div>
    </div>
</div>

<!-- Update modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="Update" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Actualizar método de envío</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 my-account-area ptb-30">
                    <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                        <div class="">
                            <form action="#" class="ho-form" id="">
                                <div id="frmShippingMethod" class="ho-form-inner">

                                    <div class="text-center col-md-3 col-sm-12">
                                        <h5 id="suspend" class="badge-pill badge-danger">SUSPENDIDA</h5>
                                    </div>

                                    @* Hidden *@
                                    @*ShippingMethodId*@
                                    @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtShippingMethodId", type: "type=\"number\"", format: "", label: "Identificador de Metodo de envio", placeHolder: "", columnDataName: "ShippingMethodId")
                                    @*Name*@
                                    @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtName", type: "type=\"text\"", format: "", label: "Nombre", placeHolder: "", columnDataName: "Name")
                                    @*ShippingProviderId*@
                                    @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtShippingProviderId", type: "type=\"number\" disabled", format: "", label: "Id del Proveedor", placeHolder: "", columnDataName: "ShippingProviderId")
                                    @*BaseCost*@
                                    @Html.CtrlInput(divSize: "single-input", id: "txtBaseCost", type: "type=\"number\" ", format: "", label: "Costo Adicional", placeHolder: "", columnDataName: "BaseCost")
                                    @*AdditionalCost*@
                                    @Html.CtrlInput(divSize: "single-input", id: "txtAdditionalCost", type: "type=\"number\"", format: "", label: "Costo kilómetro adicional", placeHolder: "", columnDataName: "AdditionalCost")
                                    @*Description*@
                                    @Html.CtrlInput(divSize: "single-input", id: "txtDescription", type: "type=\"text\"", format: "", label: "Descripción", placeHolder: "", columnDataName: "Description")
                                    @*DaysToDeliver*@
                                    @Html.CtrlInput(divSize: "single-input", id: "txtDaysToDeliver", type: "type=\"number\"", format: "", label: "Dias para envío", placeHolder: "", columnDataName: "DaysToDeliver")

                                    <div id="alertMessage" class="alertMessage d-none">
                                        <p class="">Por favor verificar los campos.</p>
                                    </div>

                                    <div class="d-flex flex-row">
                                        <div>
                                            @Html.CtrlButton(viewName: "Crud", id: "btnCancel\" data-dismiss=\"modal\"", style: "ho-button-dark", label: "Cancelar", onClickFunction: "Back")
                                        </div>
                                        <div>
                                            @Html.CtrlButton(viewName: "Crud", id: "btnDelete", style: "ho-button", label: "Eliminar", onClickFunction: "Delete")
                                        </div>
                                        <div>
                                            @Html.CtrlButton(viewName: "Crud", id: "btnSuspend", style: "ho-button", label: "Suspender", onClickFunction: "Suspend")
                                        </div>
                                        <div>
                                            @Html.CtrlButton(viewName: "Crud", id: "btnUpdate", style: "ho-button ", label: "Modificar tienda", onClickFunction: "Validate")
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>