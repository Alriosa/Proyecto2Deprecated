@using WebUI.Models.Helpers

<script src="~/Scripts/Views/vPaymentMethod.js"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

@{
    ViewBag.Title = "ListAllPaymentMethods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Breadcrumb Area -->
<div class="breadcrumb-area bg-grey">
    <div class="container">
        <div class="ho-breadcrumb">
            <ul>
                <li>@Html.ActionLink("Inicio", "index")</li>
                <li>Listado de Métodos de Pago</li>
            </ul>
        </div>
    </div>
</div>
<!--// Breadcrumb Area -->

<div id="wrapper" class="container wrapper">
    <div class="row">
        <div class="col-12 my-account-area ptb-30">
            @Html.CtrlTable(viewName: "vPaymentMethod", id: "tblPaymentMethod", title: "Métodos de Pago", columnsTitle: "Id,Tipo de Pago,Valor,Id Usuario,Activo", ColumnsDataName: "PaymentMethodId,PaymentTypeCode,Value,UserId,IsActive", onSelectFunction: "BindFields")
        </div>
    </div>
</div>

<!-- Update modal -->

<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="Coordinates selector" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modificar Método de Pago.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="frmPaymentMethod">
                    @Html.CtrlDropDown2(id: "drpPaymentMethod", listId: "paymentmethod", label: "Método de pago", style: "single-input single-input-half", columnDataName: "PaymentTypeCode")


                    @Html.CtrlInput(divSize: "single-input single-input-half", id: "txtValue", type: "type=\"number\"", format: "number", label: "Número de tarjeta", placeHolder: "", columnDataName: "Value")


                    @* Hidden *@
                    @Html.CtrlInput(divSize: "d-none", id: "txtPaymentMethodId", type: "type=\"number\"", format: "", label: "Id del Repartidor", placeHolder: "", columnDataName: "PaymentMethodId")

                    @Html.CtrlInput(divSize: "d-none", id: "txtUserId", type: "type=\"number\"", format: "", label: "User Id", placeHolder: "", columnDataName: "UserId")
                    @Html.CtrlInput(divSize: "d-none", id: "txtIsActive", type: "type=\"text\"", format: "", label: "Activo", placeHolder: "", columnDataName: "IsActive")
                </div>
            </div>
            <div class="modal-footer d-inline-block">
                <div class="d-flex align-self-center">
                    <div class="">
                        <button type="button" class="btn btn-secondary mr-3" data-dismiss="modal">Cancelar</button>
                    </div>
                    <div class="">
                        <button id="btnUpdate" type="button" class="ho-button mr-3">Actualizar</button>
                    </div>
                    <div class="">
                        <button id="btnDelete" type="button" class="ho-button mr-3" data-dismiss="modal">Eliminar</button>
                    </div>
                    <div id="alertMessageUpdate" class="alertMessage d-none">
                        <p class="">Por favor verificá los campos en rojo.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>